---
import Layout from "@layouts/Layout.astro";
const { frontmatter } = Astro.props;
const offers = await Astro.glob('/src/pages/savings/*.md'); // Chemin vers vos fichiers Markdown

---
<Layout title="Discovers our offers" >

<section class="py-32">
    <div class="grid  max-w-7xl mx-auto ">
        <div class="max-w-4xl px-4 mx-auto mb-10 text-center">
            <h1 class="text-3xl md:text-5xl lg:text-7xl mb-6 font-bold">Discover our offers</h1>
            <p>La Casa Que Canta is a small luxury hotel with essence, history and a personality of its own. Located in Zihuatanejo next to the beautiful La Ropa beach, this hotel offers unrivaled panoramic views.

            </p>

        </div>
        <div class="grid gap-6 grid-cols-1 px-4 md:grid-cols-3 ">
            {offers.slice(0, 6).map((post) => (
                <div class="group relative bg-cover bg-center  aspect-square grid items-end text-white  overflow-hidden">
                    <div class="absolute z-10 w-full h-full top-0 bg-gradient-to-br from-transparent to-gray-900 opacity-60"></div>
                    <img class=" absolute z-0 w-full h-full top-0 object-cover group-hover:scale-[1.02] transition duration-300 ease-in-out" src={post.frontmatter.imagefront} alt=""/>
                    <h3 class="text-3xl md:text-5xl z-20 relative text-center">{post.frontmatter.title}</h3>
                    <div>
                        <p class="text-white relative z-10 p-4 text-center" set:html={post.frontmatter.description}> </p>
                        <div class="flex flex-wrap p-4 gap-4  justify-center md:justify-between">
                            <a href={post.url} class="relative text-sm z-10 bg-black/90 font-semibold uppercase py-3 px-6 text-white hover:bg-black/60">More details</a>
                            <a href={post.url} class="relative text-sm z-10 bg-white/90 font-semibold uppercase py-3 px-6 text-black hover:bg-white/60">Book Now</a>
                        </div>

                    </div>
                    
                  </div>
                ))}
        </div>
        

    </div>
</section>

</Layout>